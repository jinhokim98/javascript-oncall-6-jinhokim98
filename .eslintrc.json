{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier", "eslint-config-prettier"],
    "overrides": [
    ],
    "plugins": [
        "prettier",
        "eslint-plugin-prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error", { "endOfLine": "auto" }],
        "no-await-in-loop": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "max-depth": ["error", 2],
        "max-lines-per-function": ["error", {"max": 15}]
    }
}
